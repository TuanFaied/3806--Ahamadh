pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/TuanFaied/3806--Ahamadh.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    
                    docker.build("calculator-app:latest", "-f Calculator-JavaScript-Project/Dockerfile .")
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                script {
                    
                    def app = docker.image("calculator-app:latest").run("-p 8080:8080", "--rm") 

                    
                    sleep 5
                    
                    
                    def result = sh(script: 'curl -f http://localhost:8080', returnStatus: true)
                    
                    
                    if (result != 0) {
                        error('Application failed to start')
                    }

                   
                    //app.stop()
                }
            }
        }
    }

    post {
        always {
            script {
                
                sh 'docker ps -q | xargs -r docker stop'
                sh 'docker ps -a -q | xargs -r docker rm'
            }
        }

        success {
            echo 'Pipeline completed successfully.'
        }

        failure {
            echo 'Pipeline failed.'
        }
    }
}
